<h1 class="edit">Editing Book</h1>

<% if @book.errors.any? %>
  <h2><%= @book.errors.count %>error prohibited this book from being saved:</h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |book| %>

  <div class="field">
    <label for="book_title">Title</label>
    <%= book.text_field :title, class: "book_title" %>
  </div>
  
  <div class="field">
    <label for=book_body>Body</label>
      <%= book.text_area :body, class: "book_body" %>
  </div>
  
  <div class="actions">
    <%= book.submit 'Update Book' %>
  </div>
  

  <%= link_to 'Show',book_path(@book.id)  %>
   | 
  <%= link_to 'Back',books_path %>

<% end %>