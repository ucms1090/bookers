<h2>New book</h2>

<% if @book.errors.any? %>
  <h2><%= @book.errors.count %>error prohibited this book from being saved:</h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <%= form_with model: @book do |book| %>
  <div>
    <label for=book_title>Title</label>
  </div>
  <span><%= book.text_field :title %></span>
  <div>
    <label for=book_body>Body</label>
  </div>
  <span><%= book.text_area :body %></span>
  <div><%= book.submit 'Create Book' %></div>
  <% end %>
  